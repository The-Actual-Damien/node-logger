{
    "name": "@goodtimeio/node-logger",
    "version": "1.7.1",
    "description": "Package to help with logging in node",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "source": "src/index.ts",
    "repository": "git://github.com/GoodTimeio/node-logger.git",
    "author": "Eng | GoodTime.io",
    "scripts": {
        "build": "run-s build:compile build:fix-paths",
        "build:ci": "run-s build:clean build",
        "build:clean": "rm -rf ./dist",
        "build:compile": "tsc",
        "build:fix-paths": "tscpaths -p tsconfig.json -s ./src -o ./dist",
        "watch": "tsc -w",
        "lint": "eslint . --ext .ts,.js --fix",
        "pretest": "npm run lint",
        "test": "nyc npm run test:all",
        "posttest": "nyc report --reporter=lcov",
        "test:all": "run-p test:unit",
        "test:watch": "run-p lint 'test:unit -w'",
        "test:debug": "run-s test:unit:debug",
        "test:unit": "mocha --config tests/.mocharc.yml 'tests/unit/**/*.test.ts'",
        "test:unit:debug": "mocha --inspect --full-trace --config tests/.mocharc.yml 'tests/unit/**/*.test.ts'",
        "prettier": "prettier src/**/*.ts",
        "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
        "semantic-release": "semantic-release",
        "cm": "git-cz"
    },
    "devDependencies": {
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@istanbuljs/nyc-config-typescript": "1.0.1",
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/commit-analyzer": "8.0.1",
        "@semantic-release/git": "9.0.0",
        "@semantic-release/github": "7.0.7",
        "@semantic-release/npm": "7.0.5",
        "@semantic-release/release-notes-generator": "9.0.1",
        "@types/chai": "4.2.11",
        "@types/chai-as-promised": "7.1.2",
        "@types/faker": "4.1.12",
        "@types/mocha": "8.0.3",
        "@types/node": "13.1.8",
        "@types/sinon": "9.0.4",
        "@types/tmp": "^0.2.0",
        "@types/uuid": "8.3.0",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "@typescript-eslint/typescript-estree": "3.0.2",
        "chai": "4.2.0",
        "chai-as-promised": "7.1.1",
        "codecov": "3.7.2",
        "commitizen": "4.1.2",
        "cz-conventional-changelog": "3.2.0",
        "dotenv": "8.2.0",
        "eslint": "7.7.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-autofix": "1.0.0",
        "eslint-plugin-no-only-tests": "2.4.0",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-promise": "4.2.1",
        "eslint-plugin-sort-imports-es6-autofix": "0.5.0",
        "expect": "26.0.1",
        "faker": "4.1.0",
        "husky": "4.2.5",
        "lint-staged": "10.2.7",
        "marked": "1.1.0",
        "mocha": "7.2.0",
        "mocha-lcov-reporter": "1.3.0",
        "npm-run-all": "4.1.5",
        "nyc": "15.0.1",
        "prettier": "2.0.5",
        "prettier-eslint": "10.1.1",
        "semantic-release": "17.0.8",
        "sinon": "9.2.0",
        "source-map-support": "0.5.19",
        "tmp": "^0.2.1",
        "ts-node": "8.10.2",
        "tsconfig-paths": "3.9.0",
        "tscpaths": "0.0.9",
        "typescript": "4.0.2",
        "uuid": "8.3.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc && lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "include": [
            "src/**"
        ],
        "reporters": [
            "text-summary",
            "json"
        ]
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github",
            "@semantic-release/git"
        ],
        "prepare": [
            "@semantic-release/changelog",
            "@semantic-release/npm",
            {
                "path": "@semantic-release/git",
                "assets": [
                    "package.json",
                    "package-lock.json",
                    "CHANGELOG.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    },
    "dependencies": {
        "@sentry/node": "5.21.3",
        "@synapsestudios/winston-sentry": "1.1.0",
        "@types/triple-beam": "1.3.1",
        "redactyl.js": "1.4.2",
        "triple-beam": "1.3.0",
        "winston": "3.2.1"
    }
}
